{
  "name": "mapcontrib.next",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "diacritic": "^0.0.2",
    "expose-loader": "^0.7.3",
    "husky": "^0.14.1",
    "jquery": "^3.2.1",
    "leaflet-overpass-layer": "^2.7.0",
    "osm-ui-react": "^0.3.2",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-transition-group": "^2.2.1",
    "redux": "^3.6.0",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.7.0",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react-scripts": "^1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test-ci": "npm test -- --ci",
    "test-coverage": "npm run test-ci -- --coverage",
    "test-prettier": "prettier --single-quote --list-different 'src/**/*.{js,jsx,json,css,less}'",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "jest": {
    "collectCoverageFrom" : [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "jest --ci",
      "git add"
    ]
  }
}
