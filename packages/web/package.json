{
  "name": "mapcontrib-web",
  "version": "2.0.0-alpha.3",
  "private": true,
  "moduleRoots": [
    "./src"
  ],
  "scripts": {
    "start": "cross-env NODE_PATH=src react-scripts start",
    "build": "cross-env NODE_PATH=src react-scripts build",
    "test": "cross-env NODE_PATH=src react-scripts test --env=jsdom",
    "test-ci": "npm test -- --ci --coverage",
    "test-watch": "npm run test -- --coverage --watch",
    "test-format": "prettier --list-different 'src/**/*.{js,jsx,json,css,less}'",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "eject": "react-scripts eject",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint",
      "npm run test-ci -- --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/helpers/storage.js",
      "!node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "diacritic": "^0.0.2",
    "expose-loader": "^0.7.5",
    "jquery": "^3.2.1",
    "leaflet-nectarivore": "^0.1.6",
    "leaflet-overpass-layer": "^2.7.0",
    "lodash": "^4.17.5",
    "osm-auth": "^1.0.2",
    "osm-request": "^1.0.4",
    "osm-ui-react": "^0.6.3",
    "osmose-request": "^1.3.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-transition-group": "^2.3.0",
    "redux": "^3.6.0",
    "redux-localstorage": "^0.4.1",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.8",
    "styled-components": "^2.4.1"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.5.1",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-prettier": "^2.9.0",
    "jest-styled-components": "^5.0.1",
    "lint-staged": "^7.0.2",
    "prettier": "^1.11.1",
    "react-scripts": "^1.1.4"
  }
}
